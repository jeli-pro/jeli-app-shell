{
  "$schema": "https://repomix.com/schemas/latest/schema.json",
  "input": {
    "maxFileSize": 52428800
  },
  "output": {
    "filePath": "docs/repomix.md",
    "style": "markdown",
    "parsableStyle": true,
    "fileSummary": false,
    "directoryStructure": true,
    "files": true,
    "removeComments": false,
    "removeEmptyLines": false,
    "compress": false,
    "topFilesLength": 5,
    "showLineNumbers": false,
    "copyToClipboard": true,
    "git": {
      "sortByChanges": true,
      "sortByChangesMaxCommits": 100,
      "includeDiffs": false
    }
  },
  "include": [
    // "README.md",
    "package.json",
    "vite.config.ts",
    "tsconfig.json",
    "tsconfig.node.json",
    "tailwind.config.js",
    "postcss.config.js",
    "index.html",
    // "src"
    "src/components/ui/card.tsx",
    "src/components/ui/dropdown-menu.tsx",
    "src/components/ui/popover.tsx",
    "src/components/ui/animated-tabs.tsx",
    "src/hooks/useResizablePanes.hook.ts",
    "src/index.css",
    "src/pages/Messaging/components/ContactProfile.tsx",
    "src/pages/Messaging/components/ConversationList.tsx",
    "src/pages/Messaging/components/MessageThread.tsx",
    "src/pages/Messaging/data/mockData.ts",
    "src/pages/Messaging/index.tsx",
    "src/pages/Messaging/store/messaging.store.ts",
    "src/pages/Messaging/types.ts",
    "tailwind.config.js",
    "src/App.tsx",
    "src/store",
    "src/providers",
    "src/components/layout/AppShell.tsx",
    "src/components/layout/RightPane.tsx",
    "src/hooks/useAppViewManager.hook.ts",
    "src/components/effects"
  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "src/pages/DataDemo/data"
      // "src/features/settings",
      // // "src/pages/Dashboard",
      // "src/pages/ToasterDemo",
      // "src/pages/Notifications",
      // "src/components/ui"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  },
  "tokenCount": {
    "encoding": "o200k_base"
  }
}
