{
  "$schema": "https://repomix.com/schemas/latest/schema.json",
  "input": {
    "maxFileSize": 52428800
  },
  "output": {
    "filePath": "docs/repomix.md",
    "style": "markdown",
    "parsableStyle": true,
    "fileSummary": false,
    "directoryStructure": true,
    "files": true,
    "removeComments": false,
    "removeEmptyLines": false,
    "compress": false,
    "topFilesLength": 5,
    "showLineNumbers": false,
    "copyToClipboard": true,
    "git": {
      "sortByChanges": true,
      "sortByChangesMaxCommits": 100,
      "includeDiffs": false
    }
  },
  "include": [
    // "README.md",
    // "package.json",
    // "vite.config.ts",
    // "tsconfig.json",
    // "tsconfig.node.json",
    // "tailwind.config.js",
    // "postcss.config.js",
    // "index.html",
    // "src"
    "src/components/ui/avatar.tsx",
    "src/components/ui/badge.tsx",
    "src/components/ui/card.tsx",
    "src/hooks/useAppViewManager.hook.ts",
    "src/pages/DataDemo/components/DataCardView.tsx",
    "src/pages/DataDemo/components/DataViewModeSelector.tsx",
    "src/pages/DataDemo/components/shared/DataItemParts.tsx",
    "src/pages/DataDemo/index.tsx",
    "src/pages/DataDemo/store/dataDemo.store.tsx",
    "src/pages/DataDemo/types.ts",
    "src/hooks/useAppViewManager.hook.ts",
    "src/pages/DataDemo/components/DataKanbanView.tsx",
    "src/pages/DataDemo/components/DataViewModeSelector.tsx",
    "src/pages/DataDemo/index.tsx",
    "src/pages/DataDemo/store/dataDemo.store.tsx",
    "src/pages/DataDemo/types.ts"
    // //
    //
    //
  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "src/pages/DataDemo/data"
      // "src/features/settings",
      // // "src/pages/Dashboard",
      // "src/pages/ToasterDemo",
      // "src/pages/Notifications",
      // "src/components/ui"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  },
  "tokenCount": {
    "encoding": "o200k_base"
  }
}
